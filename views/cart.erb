<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
	  <th scope="col">Size</th>
      <th scope="col">Amount</th>
	  <th scope="col">Price</th>
	</tr>
  </thead>
  <tbody>
    <% @products.each do |p| %> 
		<tr>
		<th scope="row"><%= p.id %></th>
		<td><%= p.title %></td>
		<td><%= p.description %>  </td>
		<td><%= (p.size).to_i %> cm</td>
		<td>
			<span id="<%= p.id %>"></span>
		</td>
		<td><%= (p.price).to_i %> RUB</td>
		<tr>
	<% end %>
      <td colspan="4"></td>
      <td >
	  	<div style="float:right; width:25%;"><b>Total:</b></div>
	  </td>
	  <td><b>1200 RUB</b></td>
    </tr>
  </tbody>
</table>

<script>
$(function() 
{
	update_orders_button();
	for (var i = 0; i < 4; i++)
	{	
	$('#' + i).text(cart_get_number_of_product(i));
	}
	
});
</script>