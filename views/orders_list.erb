<h2>List of orders:</h2>

<table class="table">
		<thead>
			<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Phone</th>
			<th scope="col">Adress</th>
			</tr>
		</thead>
		<tbody>
			<% @orders_list.each do |order| %> 
				<tr>
				<th scope="row"><%= order.id %></th>
				<td><%= order.name %></td>
				<td><%= order.phone %></td>
				<td><%= order.adress %></td>
				</tr>
			<% end %>
		</tbody>
		</table>