<div class="row">

	<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
			<%= p.title %>
		</div>

		<div>
			<img src="<%= p.path_to_image %>"  width="150" height"150"/>
		</div>
	
		<div>
			<%= p.description %>
		</div>
	

		<div>
			Size: <%= p.size %>
		</div>

		<div>
			Price: <%= p.price %> rub
		</div>
	
	</div>
	<% end %>

</div>

<br />
<button class="btn btn-primary" onclick="something()">Click me!</button>